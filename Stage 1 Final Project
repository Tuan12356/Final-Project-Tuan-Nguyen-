/usr/bin/python3

from gpiozero import  LED    
from time import sleep

green = LED(16)
yellow = LED(17)
red = LED(18)

while True:
    green.on()
    sleep(15)
    green.off()
        
    yellow.on()
    sleep(4)
    yellow.off()
        
    red.on()
    sleep(15)
    red.off()
    
    sleep(30)
